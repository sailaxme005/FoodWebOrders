package com.webOrder.pages;

import java.io.IOException;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import com.webOrders.base.BaseClass;

public class OrderTypePage extends BaseClass{
//By collection = By.id("collection_btn");

@FindBy(id = "delivery_btn")
WebElement Delivery;
@FindBy(id = "postcode")
WebElement postcode;
@FindBy(id = "preorder_yes_id")
WebElement radio_yes;
@FindBy(id = "preorder_no_id")
WebElement radio_no;
@FindBy(xpath = "button[@class='one']")
WebElement Browse_Menu;
//@FindBy(xpath = "//*[@id=\"order_type_display\"]/div[2]/div[4]/div/div/button[2]")
//WebElement Proceed;
By Proceed = By.xpath("//*[@id=\"order_type_display\"]/div[2]/div[4]/div/div/button[2]");
public OrderTypePage() throws IOException {
		super();
		
		PageFactory.initElements(driver, this);
		
	}
public void clickOnCollections() {
	 collection.isSelected();
}
public void clickOnDelivery() {
	Delivery.isSelected();
	
}
public void enterPostCode(String Ps) {
	postcode.sendKeys(Ps);
}
public boolean selectYes() {
	return radio_yes.isEnabled();
}
public boolean selectNo() {
	return radio_no.isEnabled();
}
public void clickOnBrowse() {
	Browse_Menu.click();
}
public MenuWeb clickOnProceed() throws IOException {
	//Proceed.click();
	//driver.findElement(By.xpath("//*[@id=\"order_type_display\"]/div[2]/div[4]/div/div/button[2]")).click();
	driver.findElement(Proceed).click();
	return new MenuWeb();
}


}
